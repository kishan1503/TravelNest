<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup for TravelNest</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" placeholder="enter your username" id="username" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a username.
                      </div>
                </div> 
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="email" placeholder="enter your email" id="email" class="form-control" required>
                    <div class="invalid-feedback"> 
                        Please enter a valid email.
                      </div>
                </div> 
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" placeholder="enter your password" id="password" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a password.
                      </div>
                </div> 
                <button class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>